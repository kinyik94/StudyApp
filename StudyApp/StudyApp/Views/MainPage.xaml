                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Font="Large" Text="{Binding DisplayString}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

